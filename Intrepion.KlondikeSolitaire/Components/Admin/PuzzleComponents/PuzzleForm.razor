<h1>@Mode Puzzle</h1>

<hr />
@if (Puzzle is not null)
{
    <EditForm Model="Puzzle" OnInvalidSubmit="(async () => await HandleSubmitAsync(false))" OnValidSubmit="(async () => await HandleSubmitAsync(true))">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <h2>Description</h2>
        <p>
            <label>
                Description:
                <InputText @bind-Value="Puzzle.Description" @oninput="HandleDescriptionChange"/>
            </label>
        </p>
        <h2>Is Public</h2>
        <p>
            <label>
                Is Public:
                <InputCheckbox @bind-Value="Puzzle.IsPublic" @oninput="HandleIsPublicChange"/>
            </label>
        </p>
        <h2>Name</h2>
        <p>
            <label>
                Name:
                <InputText @bind-Value="Puzzle.Name" @oninput="HandleNameChange"/>
            </label>
        </p>
        <h2>Publish Time</h2>
        <p>
            <label>
                Publish Time:
                <InputDate @bind-Value="Puzzle.PublishTime" @oninput="HandlePublishTimeChange"/>
            </label>
        </p>
        @* PropertyFormCodePlaceholder *@

        <br />
        <button type="button" disabled="@Busy" class="btn btn-warning" @onclick="CancelAsync">
            Cancel
        </button>&nbsp;
        <button disabled="@Busy" type="submit" class="btn btn-primary">
            Submit
        </button>
    </EditForm>
}

@code {
    // Let parent handle result of validation.
    [Parameter]
    public EventCallback<bool> ValidationResult { get; set; }

    // Let parent handle what to do on cancel.
    [Parameter]
    public EventCallback CancelRequest { get; set; }

    // True if add mode.
    [Parameter]
    public bool IsAdd { get; set; }

    // The Puzzle to upsert.
    [Parameter]
    public Puzzle? Puzzle { get; set; }

    // The database version of Puzzle if a concurrency issue.
    [Parameter]
    public Puzzle? DbPuzzle { get; set; }

    // Prevent multiple asynchronous operations at the same time.
    [Parameter]
    public bool Busy { get; set; }

    // Mode.
    private string Mode => IsAdd ? "Add" : "Edit";

    // Ask to cancel.
    private async Task CancelAsync() => await CancelRequest.InvokeAsync(null);

    // Handle form submission request.
    // isValid: True when field validation passed.
    private async Task HandleSubmitAsync(bool isValid) => await ValidationResult.InvokeAsync(isValid);

