@inject IPuzzleFilters Filters

@if (Column == Filters.SortColumn)
{
    <span>@SortSymbol</span>
}
else
{
    <span>&nbsp;</span>
}

@code {
    // Sets which PuzzleFilterColumns this indicator is for.
    [Parameter]
    public PuzzleFilterColumns Column { get; set; }

    // The symbol to render.
    private string SortSymbol => Filters.SortAscending ? "🔼" : "🔽";
}
