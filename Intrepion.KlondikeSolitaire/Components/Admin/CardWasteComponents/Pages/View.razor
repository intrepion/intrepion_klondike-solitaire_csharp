@page "/admin/card-waste/view/{CardWasteId:guid}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

<PageTitle>Card Waste View</PageTitle>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">Card Waste with that id doesn't exist.</div>
}
else
{
    @if (CardWaste is null || Loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        @* PageHeaderCodePlaceholder *@

        <br />
        @if (EditSuccess)
        {
            <div class="alert alert-success">Successfully updated the Card Waste.</div>
        }
        <hr />
        <h2>Id</h2>
        <br />
        <h3>@CardWaste.Id</h3>
        <br />

        @* PropertyCodePlaceholder *@

        <a class="btn btn-primary" title="Go Back" href="admin/card-waste/@PageHelper.Page">
            Back to Grid
        </a>
        <span>&nbsp;</span>
        @if (!Deleted)
        {
            <a class="btn btn-primary" href="admin/card-waste/edit/@CardWaste.Id" title="Edit">Edit</a>

            <span>&nbsp;</span>
            @if (!ShowConfirmation)
            {
                <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
            }
            else
            {
                <br />
                <br />
                <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
            }
        }
        else
        {
            <div class="btn btn-danger">ðŸš« This Card Waste has been deleted.</div>
        }
    }
}

@code {
    // Tracking of asynchronous calls.
    private bool Loading;

    // Id from route of Card Waste.
    [Parameter]
    public Guid CardWasteId { get; set; }

    // Navigation check.
    private Guid _lastCardWasteId;

    // True with redirect from successful edit.
    [Parameter]
    public bool EditSuccess { get; set; }

    // CardWaste entity.
    private CardWaste? CardWaste { get; set; }

    // Set to true when not found.
    private bool NotFound = false;

    // Set to true when delete is requested.
    private bool ShowConfirmation = false;

    // Set to true when delete is successful.
    private bool Deleted = false;

    // Navigated
    protected override async Task OnParametersSetAsync()
    {
        if (_lastCardWasteId != CardWasteId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastCardWasteId = CardWasteId;
            await LoadCardWasteAsync();
        }
    }

    // Confirm deletion.
    // result is True when user confirmed.
    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    // Loads the Card Waste.
    private async Task LoadCardWasteAsync()
    {
        if (Loading)
        {
            return; //avoid concurrent requests.
        }

        NotFound = false;
        CardWaste = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.CardWastes is not null)
        {
            CardWaste = await context.CardWastes
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    x => x.Id == CardWasteId);

            if (CardWaste is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

    // Deletes the Card Waste.
    private async Task DeleteAsync()
    {
        if (Loading)
        {
            // Avoid concurrent requests.
            return;
        }

        Loading = true;
        using var context = DbFactory?.CreateDbContext();

        if (context?.Roles is not null)
        {
            var LowercaseNamePlaceholder = await context.CardWastes
                .SingleOrDefaultAsync(x => x.Id == CardWasteId);

            if (LowercaseNamePlaceholder is not null)
            {
                context.CardWastes?.Remove(LowercaseNamePlaceholder);
                await context.SaveChangesAsync();
                Loading = false;
                Deleted = true;
            }
            else
            {
                Loading = false;
                // Show not found.
                await LoadCardWasteAsync();
            }
        }
        else
        {
            Loading = false;
            // Show not found.
            await LoadCardWasteAsync();
        }
    }
}
