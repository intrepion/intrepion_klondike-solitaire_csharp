@page "/admin/pile-type/view/{PileTypeId:guid}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

<PageTitle>Pile Type View</PageTitle>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">Pile Type with that id doesn't exist.</div>
}
else
{
    @if (PileType is null || Loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <h1>@PileType.Id</h1>
        @* PageHeaderCodePlaceholder *@

        <br />
        @if (EditSuccess)
        {
            <div class="alert alert-success">Successfully updated the Pile Type.</div>
        }
        <hr />
        <h2>Id</h2>
        <br />
        <h3>@PileType.Id</h3>
        <br />

        <h2>Name</h2>
        <br />
        <h3>@PileType.Name</h3>
        <br />
        @* PropertyCodePlaceholder *@

        <a class="btn btn-primary" title="Go Back" href="admin/pile-type/@PageHelper.Page">
            Back to Grid
        </a>
        <span>&nbsp;</span>
        @if (!Deleted)
        {
            <a class="btn btn-primary" href="admin/pile-type/edit/@PileType.Id" title="Edit">Edit</a>

            <span>&nbsp;</span>
            @if (!ShowConfirmation)
            {
                <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
            }
            else
            {
                <br />
                <br />
                <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
            }
        }
        else
        {
            <div class="btn btn-danger">ðŸš« This Pile Type has been deleted.</div>
        }
    }
}

@code {
    // Tracking of asynchronous calls.
    private bool Loading;

    // Id from route of Pile Type.
    [Parameter]
    public Guid PileTypeId { get; set; }

    // Navigation check.
    private Guid _lastPileTypeId;

    // True with redirect from successful edit.
    [Parameter]
    public bool EditSuccess { get; set; }

    // PileType entity.
    private PileType? PileType { get; set; }

    // Set to true when not found.
    private bool NotFound = false;

    // Set to true when delete is requested.
    private bool ShowConfirmation = false;

    // Set to true when delete is successful.
    private bool Deleted = false;

    // Navigated
    protected override async Task OnParametersSetAsync()
    {
        if (_lastPileTypeId != PileTypeId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastPileTypeId = PileTypeId;
            await LoadPileTypeAsync();
        }
    }

    // Confirm deletion.
    // result is True when user confirmed.
    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    // Loads the Pile Type.
    private async Task LoadPileTypeAsync()
    {
        if (Loading)
        {
            return; //avoid concurrent requests.
        }

        NotFound = false;
        PileType = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.PileTypes is not null)
        {
            PileType = await context.PileTypes
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    x => x.Id == PileTypeId);

            if (PileType is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

    // Deletes the Pile Type.
    private async Task DeleteAsync()
    {
        if (Loading)
        {
            // Avoid concurrent requests.
            return;
        }

        Loading = true;
        using var context = DbFactory?.CreateDbContext();

        if (context?.Roles is not null)
        {
            var LowercaseNamePlaceholder = await context.PileTypes
                .SingleOrDefaultAsync(x => x.Id == PileTypeId);

            if (LowercaseNamePlaceholder is not null)
            {
                context.PileTypes?.Remove(LowercaseNamePlaceholder);
                await context.SaveChangesAsync();
                Loading = false;
                Deleted = true;
            }
            else
            {
                Loading = false;
                // Show not found.
                await LoadPileTypeAsync();
            }
        }
        else
        {
            Loading = false;
            // Show not found.
            await LoadPileTypeAsync();
        }
    }
}
