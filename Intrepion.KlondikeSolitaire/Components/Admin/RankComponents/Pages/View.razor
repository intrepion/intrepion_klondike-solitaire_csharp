@page "/admin/UrlNamePlaceholder/view/{RankId:guid}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

<PageTitle>Rank View</PageTitle>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">Rank with that id doesn't exist.</div>
}
else
{
    @if (Rank is null || Loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        @* PageHeaderCodePlaceholder *@

        <br />
        @if (EditSuccess)
        {
            <div class="alert alert-success">Successfully updated the Rank.</div>
        }
        <hr />
        <h2>Id</h2>
        <br />
        <h3>@Rank.Id</h3>
        <br />

        @* PropertyCodePlaceholder *@

        <a class="btn btn-primary" title="Go Back" href="admin/UrlNamePlaceholder/@PageHelper.Page">
            Back to Grid
        </a>
        <span>&nbsp;</span>
        @if (!Deleted)
        {
            <a class="btn btn-primary" href="admin/UrlNamePlaceholder/edit/@Rank.Id" title="Edit">Edit</a>

            <span>&nbsp;</span>
            @if (!ShowConfirmation)
            {
                <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
            }
            else
            {
                <br />
                <br />
                <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
            }
        }
        else
        {
            <div class="btn btn-danger">ðŸš« This Rank has been deleted.</div>
        }
    }
}

@code {
    // Tracking of asynchronous calls.
    private bool Loading;

    // Id from route of Rank.
    [Parameter]
    public Guid RankId { get; set; }

    // Navigation check.
    private Guid _lastRankId;

    // True with redirect from successful edit.
    [Parameter]
    public bool EditSuccess { get; set; }

    // Rank entity.
    private Rank? Rank { get; set; }

    // Set to true when not found.
    private bool NotFound = false;

    // Set to true when delete is requested.
    private bool ShowConfirmation = false;

    // Set to true when delete is successful.
    private bool Deleted = false;

    // Navigated
    protected override async Task OnParametersSetAsync()
    {
        if (_lastRankId != RankId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastRankId = RankId;
            await LoadRankAsync();
        }
    }

    // Confirm deletion.
    // result is True when user confirmed.
    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    // Loads the Rank.
    private async Task LoadRankAsync()
    {
        if (Loading)
        {
            return; //avoid concurrent requests.
        }

        NotFound = false;
        Rank = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.Ranks is not null)
        {
            Rank = await context.Ranks
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    c => c.Id == RankId);

            if (Rank is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

    // Deletes the Rank.
    private async Task DeleteAsync()
    {
        if (Loading)
        {
            // Avoid concurrent requests.
            return;
        }

        Loading = true;
        using var context = DbFactory?.CreateDbContext();

        if (context?.Roles is not null)
        {
            var LowercaseNamePlaceholder = await context.Ranks
                .SingleOrDefaultAsync(c => c.Id == RankId);

            if (LowercaseNamePlaceholder is not null)
            {
                context.Ranks?.Remove(LowercaseNamePlaceholder);
                await context.SaveChangesAsync();
                Loading = false;
                Deleted = true;
            }
            else
            {
                Loading = false;
                // Show not found.
                await LoadRankAsync();
            }
        }
        else
        {
            Loading = false;
            // Show not found.
            await LoadRankAsync();
        }
    }
}
