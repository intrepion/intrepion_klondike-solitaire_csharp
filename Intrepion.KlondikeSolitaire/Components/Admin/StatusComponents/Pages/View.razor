@page "/admin/status/view/{StatusId:guid}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

<PageTitle>Status View</PageTitle>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">Status with that id doesn't exist.</div>
}
else
{
    @if (Status is null || Loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <h1>@Status.Id</h1>
        @* PageHeaderCodePlaceholder *@

        <br />
        @if (EditSuccess)
        {
            <div class="alert alert-success">Successfully updated the Status.</div>
        }
        <hr />
        <h2>Id</h2>
        <br />
        <h3>@Status.Id</h3>
        <br />

        <h2>Name</h2>
        <br />
        <h3>@Status.Name</h3>
        <br />
        @* PropertyCodePlaceholder *@

        <a class="btn btn-primary" title="Go Back" href="admin/status/@PageHelper.Page">
            Back to Grid
        </a>
        <span>&nbsp;</span>
        @if (!Deleted)
        {
            <a class="btn btn-primary" href="admin/status/edit/@Status.Id" title="Edit">Edit</a>

            <span>&nbsp;</span>
            @if (!ShowConfirmation)
            {
                <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
            }
            else
            {
                <br />
                <br />
                <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
            }
        }
        else
        {
            <div class="btn btn-danger">ðŸš« This Status has been deleted.</div>
        }
    }
}

@code {
    // Tracking of asynchronous calls.
    private bool Loading;

    // Id from route of Status.
    [Parameter]
    public Guid StatusId { get; set; }

    // Navigation check.
    private Guid _lastStatusId;

    // True with redirect from successful edit.
    [Parameter]
    public bool EditSuccess { get; set; }

    // Status entity.
    private Status? Status { get; set; }

    // Set to true when not found.
    private bool NotFound = false;

    // Set to true when delete is requested.
    private bool ShowConfirmation = false;

    // Set to true when delete is successful.
    private bool Deleted = false;

    // Navigated
    protected override async Task OnParametersSetAsync()
    {
        if (_lastStatusId != StatusId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastStatusId = StatusId;
            await LoadStatusAsync();
        }
    }

    // Confirm deletion.
    // result is True when user confirmed.
    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    // Loads the Status.
    private async Task LoadStatusAsync()
    {
        if (Loading)
        {
            return; //avoid concurrent requests.
        }

        NotFound = false;
        Status = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.Statuses is not null)
        {
            Status = await context.Statuses
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    x => x.Id == StatusId);

            if (Status is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

    // Deletes the Status.
    private async Task DeleteAsync()
    {
        if (Loading)
        {
            // Avoid concurrent requests.
            return;
        }

        Loading = true;
        using var context = DbFactory?.CreateDbContext();

        if (context?.Roles is not null)
        {
            var LowercaseNamePlaceholder = await context.Statuses
                .SingleOrDefaultAsync(x => x.Id == StatusId);

            if (LowercaseNamePlaceholder is not null)
            {
                context.Statuses?.Remove(LowercaseNamePlaceholder);
                await context.SaveChangesAsync();
                Loading = false;
                Deleted = true;
            }
            else
            {
                Loading = false;
                // Show not found.
                await LoadStatusAsync();
            }
        }
        else
        {
            Loading = false;
            // Show not found.
            await LoadStatusAsync();
        }
    }
}
