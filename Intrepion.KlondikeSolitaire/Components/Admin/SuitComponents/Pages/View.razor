@page "/admin/suit/view/{SuitId:guid}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

<PageTitle>Suit View</PageTitle>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">Suit with that id doesn't exist.</div>
}
else
{
    @if (Suit is null || Loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <h1>@Suit.Id</h1>
        @* PageHeaderCodePlaceholder *@

        <br />
        @if (EditSuccess)
        {
            <div class="alert alert-success">Successfully updated the Suit.</div>
        }
        <hr />
        <h2>Id</h2>
        <br />
        <h3>@Suit.Id</h3>
        <br />

        <h2>Code</h2>
        <br />
        <h3>@Suit.Code</h3>
        <br />
        <h2>Name</h2>
        <br />
        <h3>@Suit.Name</h3>
        <br />
        @* PropertyCodePlaceholder *@

        <a class="btn btn-primary" title="Go Back" href="admin/suit/@PageHelper.Page">
            Back to Grid
        </a>
        <span>&nbsp;</span>
        @if (!Deleted)
        {
            <a class="btn btn-primary" href="admin/suit/edit/@Suit.Id" title="Edit">Edit</a>

            <span>&nbsp;</span>
            @if (!ShowConfirmation)
            {
                <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
            }
            else
            {
                <br />
                <br />
                <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
            }
        }
        else
        {
            <div class="btn btn-danger">ðŸš« This Suit has been deleted.</div>
        }
    }
}

@code {
    // Tracking of asynchronous calls.
    private bool Loading;

    // Id from route of Suit.
    [Parameter]
    public Guid SuitId { get; set; }

    // Navigation check.
    private Guid _lastSuitId;

    // True with redirect from successful edit.
    [Parameter]
    public bool EditSuccess { get; set; }

    // Suit entity.
    private Suit? Suit { get; set; }

    // Set to true when not found.
    private bool NotFound = false;

    // Set to true when delete is requested.
    private bool ShowConfirmation = false;

    // Set to true when delete is successful.
    private bool Deleted = false;

    // Navigated
    protected override async Task OnParametersSetAsync()
    {
        if (_lastSuitId != SuitId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastSuitId = SuitId;
            await LoadSuitAsync();
        }
    }

    // Confirm deletion.
    // result is True when user confirmed.
    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    // Loads the Suit.
    private async Task LoadSuitAsync()
    {
        if (Loading)
        {
            return; //avoid concurrent requests.
        }

        NotFound = false;
        Suit = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.Suits is not null)
        {
            Suit = await context.Suits
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    x => x.Id == SuitId);

            if (Suit is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

    // Deletes the Suit.
    private async Task DeleteAsync()
    {
        if (Loading)
        {
            // Avoid concurrent requests.
            return;
        }

        Loading = true;
        using var context = DbFactory?.CreateDbContext();

        if (context?.Roles is not null)
        {
            var LowercaseNamePlaceholder = await context.Suits
                .SingleOrDefaultAsync(x => x.Id == SuitId);

            if (LowercaseNamePlaceholder is not null)
            {
                context.Suits?.Remove(LowercaseNamePlaceholder);
                await context.SaveChangesAsync();
                Loading = false;
                Deleted = true;
            }
            else
            {
                Loading = false;
                // Show not found.
                await LoadSuitAsync();
            }
        }
        else
        {
            Loading = false;
            // Show not found.
            await LoadSuitAsync();
        }
    }
}
